<section class="hero py-10">
      <div class="container mx-auto flex justify-between items-center">
        <div class="w-1/2">
          <h6 class="text-lg italic">Are you hungry?</h6>
          <h1 class="text-6xl font-bold py-5">Don't Wait !</h1>
          <button class="px-6 py-2 rounded-full text-white mt-4 font-bold btn-primary">Order Now</button>
        </div class="w-1/2">
        <div>
          <img src="/img/hero-pizza.png" alt="pizza" class="h-[500px]"/>
        </div>
      </div>
    </section>

    <section class="menu container mx-auto my-10">
      <h1 class="text-xl font-bold mb-7">All Pizzas</h1>
      
      <!-- // cart  -->

    
      <div class="grid grid-cols-4 gap-y-16 ">

         <% pizzas.forEach((pizza)=> { %>
        <div class="w-full md:w-64">
            <img class="h-40 mb-4 mx-auto" src="/img/<%= pizza.image %>" alt="">
            <div class="text-center">
                <h2 class="mb-4 text-lg"><%= pizza.name %></h2>
                <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= pizza.size %></span>
                <div class="flex items-center justify-around mt-6">
                    <span class="font-bold text-lg">â‚¹ <%= pizza.price %></span>
                    <button data-pizza="<%= JSON.stringify(pizza) %> " class="cartBtn p-1 px-6 rounded-full flex items-center font-bold gap-2"> <span>+</span> <span>Add</span></button>
                </div>
            </div>
        </div>
        <% }) %>

      </div>
    </section>